<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/iv_gvcontent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_x_240"
        android:scaleType="fitXY"
        android:src="@drawable/caiba_4" />
    <TextView android:id="@+id/tv_isBan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_x_120"
        android:text="禁"
        android:layout_centerInParent="true"
        android:gravity="center|bottom"
        android:textSize="@dimen/layout_x_35"
        android:textColor="#ff0000"/>

    <RelativeLayout
        android:id="@+id/other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_x_70" >

        <RelativeLayout
            android:id="@+id/rl_numbel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_x_10"
            android:layout_marginLeft="@dimen/layout_x_30" >

            <TextView
                android:id="@+id/tv_numbelstring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="桌位号: "
                android:textColor="#000000"
                android:textSize="@dimen/layout_x_18" />

            <TextView
                android:id="@+id/tv_numbel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_numbelstring"
                android:layout_toRightOf="@id/tv_numbelstring"
                android:textColor="#000000"
                android:text="1"
                android:textSize="@dimen/layout_x_18" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/rl_numbel"
            android:layout_below="@id/rl_numbel"
            android:layout_marginTop="@dimen/layout_x_2" >

            <TextView
                android:id="@+id/tv_countstring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="凳子数: "
                android:textColor="#000000"
                android:textSize="@dimen/layout_x_18" />

            <TextView
                android:id="@+id/tv_tablecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_countstring"
                android:layout_toRightOf="@id/tv_countstring"
                android:textColor="#000000"
                android:text="2"
                android:textSize="@dimen/layout_x_18" />
        </RelativeLayout>

         <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/rl_count"
            android:layout_toRightOf="@id/rl_count"
            android:layout_marginLeft="@dimen/layout_x_15"
            android:textColor="#000000"
            android:textSize="@dimen/layout_x_18" />

        <TextView
            android:id="@+id/isChecked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_status"
            android:layout_centerHorizontal="true"
            android:text="aaa"
            android:textColor="#ff0000"
            android:textSize="@dimen/layout_x_18" />
        
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/isChecked"
            android:layout_marginRight="30dp"
            android:text="东方天地"
            android:textColor="#000000"
            android:textSize="@dimen/layout_x_18" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_x_36"
            android:layout_below="@id/tv_name"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/layout_x_10"
         >

            <TextView
                android:id="@+id/btn_status"
                android:layout_width="@dimen/layout_x_180"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#ff7300"
                android:gravity="center"
                android:text="@string/CanOrder"
                android:textColor="#000000"
                android:textSize="@dimen/layout_x_18" />
        </RelativeLayout>

        

    </RelativeLayout>

</RelativeLayout>