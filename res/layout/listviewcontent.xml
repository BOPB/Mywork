            android:textColor="#000000"
            android:textSize="@dimen/layout_x_21" />

        <TextView
            android:id="@+id/tv_listcontent5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_listcontent1"
            android:layout_below="@id/tv_listcontent1"
            android:text="@string/totalprice"
            android:textColor="#000000"
            android:textSize="@dimen/layout_x_21" />

        <TextView
            android:id="@+id/tv_listcontent6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_listcontent5"
            android:layout_marginLeft="@dimen/layout_x_12"
            android:layout_toRightOf="@id/tv_listcontent5"
            android:text="1014"
            android:textColor="#000000"
            android:textSize="@dimen/layout_x_21" />

        <TextView
            android:id="@+id/tv_listcontent3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_listcontent1"
            android:layout_below="@id/tv_listcontent5"
            android:paddingBottom="@dimen/layout_x_3"
            android:text="@string/ordertime"
            android:textColor="#000000"
            android:textSize="@dimen/layout_x_21" />

        <TextView
            android:id="@+id/tv_listcontent4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_listcontent3"
            android:layout_below="@id/tv_listcontent5"
            android:layout_marginLeft="@dimen/layout_x_12"
            android:layout_toRightOf="@id/tv_listcontent3"
            android:text="2014"
            android:textColor="#000000"
            android:textSize="@dimen/layout_x_21" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_listcontent3"
            android:layout_below="@id/tv_listcontent3"
            android:paddingBottom="@dimen/layout_x_3"
            android:text="@string/phone"
            android:textColor="#000000"
            android:textSize="@dimen/layout_x_21" />

        <TextView
            android:id="@+id/tv_phones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_phone"
            android:layout_below="@id/tv_listcontent3"
            android:layout_marginLeft="@dimen/layout_x_12"
            android:layout_toRightOf="@id/tv_phone"
            android:text="13339898935"
            android:textColor="#000000"
            android:textSize="@dimen/layout_x_21" />
