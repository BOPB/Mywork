            android:textSize="@dimen/layout_x_21" />

        <TextView
            android:id="@+id/tv_listcontent2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_listcontent1"
            android:layout_marginLeft="@dimen/layout_x_12"
            android:layout_toRightOf="@id/tv_listcontent1"
